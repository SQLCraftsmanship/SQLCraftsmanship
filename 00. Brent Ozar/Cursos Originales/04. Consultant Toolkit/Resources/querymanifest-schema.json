{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Query": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string"
          },
          "FileName": {
            "type": "string"
          },
          "Database": {
            "type": "string"
          },
          "Timeout": {
            "type": "integer"
          },
          "QueryResult": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "WorksheetName": {
                  "type": "string"
                },
                "Mapping": {
                  "type": "object",
                  "properties": {
                    "RowStart": {
                      "type": "integer"
                    },
                    "Column": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "SourceColumnName": {
                            "type": "string"
                          },
                          "WorksheetColumn": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "SourceColumnName",
                          "WorksheetColumn"
                        ]
                      }
                    }
                  },
                  "required": [
                    "RowStart",
                    "Column"
                  ]
                }
              },
              "required": [
                "WorksheetName",
                "Mapping"
              ]
            }
          }
        },
        "required": [
          "Name"
        ]
      }
    }
  },
  "required": [
    "Query"
  ]
}